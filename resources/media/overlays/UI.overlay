      top -60
      
      element TextArea(UI/Text/Win)
      {
        metrics_mode pixels
        
        font_name SdkTrays/Caption
        colour 1 1 1
        colour_bottom 0.5 0.5 0.5
        alignment center
        char_height 84
        space_width 32
        
        
        horz_align center
        vert_align top
        
        caption You Won!
      }
    } 
}

