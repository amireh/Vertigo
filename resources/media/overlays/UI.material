material Vertigo/Overlays/Materials/Shields/Fire
{
	technique
	{
		pass
		{
			ambient 1 0 0
			diffuse 1.0 0 0
      scene_blend add

			texture_unit
			{
				texture UI_FireShield5.png
			}			
		}
	}
}

material Vertigo/Overlays/Materials/Shields/Ice
{
	technique
	{
		pass
		{
			ambient 1 1 1
			diffuse 1.0 1.0 1.0
			scene_blend add
			cull_software none
			cull_hardware none

			texture_unit
			{
				tex_address_mode clamp
				texture UI_IceShield.png

			}

		}
	}
}

