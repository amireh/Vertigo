material PE/point_lensflare
{
	technique
	{
		pass
		{
			lighting off
			depth_write off
			scene_blend add

			point_sprites on
			point_size 0.1
			point_size_attenuation on

			texture_unit
			{
				texture flare.png
			}
		}
	}
}

