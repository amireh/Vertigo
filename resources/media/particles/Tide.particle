system Vertigo/FX/Tide
{
    scale_velocity                              0.1
    scale                                       0.3 0.3 0.3
    technique 
    {
        material                                mp_explosion_water
        renderer                                Billboard
        {
            billboard_rotation_type             vertex
        }
        emitter                                 Box 
        {
            emission_rate                       200
            angle                               10
            time_to_live                        dyn_random
            {
                min                             1
                max                             2
            }
            velocity                            dyn_random
            {
                min                             900
                max                             3200
            }
            all_particle_dimensions             dyn_random
            {
                min                             20
                max                             100
            }
            colour                              0.992157 0.992157 0.984314 1
            force_emission                      true
            box_height                          1
        }
        affector                                TextureRotator 
        {
            use_own_rotation                    false
            rotation                            dyn_random
            {
                min                             -3
                max                             3
            }
            rotation_speed                      dyn_random
            {
                min                             -0.1
                max                             0.1
            }
        }
        affector                                Colour 
        {
            time_colour                         0    1 1 1 1
            time_colour                         1    1 1 1 0
            colour_operation                    multiply
        }
        affector                                ScaleVelocity 
        {
            velocity_scale                      dyn_curved_linear
            {
                control_point                   0 -200
                control_point                   0.9 100
            }
            since_start_system                  true
        }
        affector                                LinearForce 
        {
            force_vector                        0 -2000 0
        }
        affector                                Scale 
        {
            x_scale                             dyn_random
            {
                min                             100
                max                             200
            }
            y_scale                             dyn_random
            {
                min                             400
                max                             800
            }
        }
        observer                                OnClear 
        {
            handler                             DoStopSystem 
            {
            }
        }
    }
 }
