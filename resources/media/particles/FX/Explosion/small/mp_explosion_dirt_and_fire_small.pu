    {
        visual_particle_quota                   200
        material                                mp_explosion_smoke_03
        renderer                                Billboard
        {
            billboard_rotation_type             vertex
        }
        emitter                                 Point 
        {
            emission_rate                       500
            time_to_live                        dyn_random
            {
                min                             1
                max                             3
            }
            velocity                            dyn_random
            {
                min                             120
                max                             1000
            }
            all_particle_dimensions             dyn_random
            {
                min                             30
                max                             60
            }
            colour                              0.34902 0.27451 0.258824 1
            force_emission                      true
        }
