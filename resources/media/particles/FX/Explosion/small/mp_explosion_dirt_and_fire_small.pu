        {
            emission_rate                       1000
            angle                               80
            time_to_live                        dyn_random
            {
                min                             0.2
                max                             0.3
            }
            velocity                            dyn_random
            {
                min                             0
                max                             10
            }
            duration                            0.05
            particle_width                      dyn_random
            {
                min                             80
                max                             160
            }
            particle_height                     dyn_random
            {
                min                             100
