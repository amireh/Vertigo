system Explosion/mp_dirt_and_fire
{
    scale_velocity                              0.001
    scale                                       0.001 0.001 0.001
    technique 
    {
        visual_particle_quota                   60
        material                                mp_explosion_flame_01
        renderer                                Billboard
        {
            render_queue_group                  51
            billboard_type                      oriented_self
            billboard_origin                    bottom_center
            billboard_rotation_type             vertex
        }
        emitter                                 Box 
        {
            emission_rate                       1000
            angle                               80
            time_to_live                        dyn_random
            {
                min                             0.2
                max                             0.5
            }
            velocity                            dyn_random
            {
                min                             100
                max                             300
            }
            duration                            0.05
            particle_width                      dyn_random
            {
                min                             10
                max                             20
            }
            particle_height                     dyn_random
            {
                min                             20
                max                             100
            }
            start_colour_range                  0.988235 0.988235 0.988235 1
            box_width                           40
            box_height                          5
            box_depth                           40
        }
        affector                                Colour 
        {
            time_colour                         0    1 1 1 1
            time_colour                         1    0 0 0 0
            colour_operation                    multiply
        }
        affector                                Scale 
        {
            y_scale                             dyn_random
            {
                min                             50
                max                             200
            }
        }
    }
    technique 
    {
        visual_particle_quota                   40
        material                                mp_explosion_flare_01
