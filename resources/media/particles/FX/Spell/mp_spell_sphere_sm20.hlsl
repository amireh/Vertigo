//-----------------------------------------------------------------------------------------------------------------------------------------------
// Fragment shader
//-----------------------------------------------------------------------------------------------------------------------------------------------
float4 mainFP(

    float2 uv                  : TEXCOORD0,
    uniform sampler2D tex      : register(s0),
    uniform float time) : COLOR
{
    // Recalculate the colour
    uv.x += 0.05 * sin(20 * (uv.y + time));
    float4 output = float4(0.909804, 0.87451, 1, 1) * tex2D(tex, uv);
    return output;
}
