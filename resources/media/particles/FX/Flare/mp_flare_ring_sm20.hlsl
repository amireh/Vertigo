//-----------------------------------------------------------------------------------------------------------------------------------------------
// Fragment shader
//-----------------------------------------------------------------------------------------------------------------------------------------------
float4 mainFP(

    float2 uv                  : TEXCOORD0,
    uniform sampler2D tex      : register(s0),
    uniform float time) : COLOR
{
    // Recalculate the colour
    uv.y += 0.03 * sin(40 * (uv.x + time));
    float4 output = float4(0.980392, 1, 0.733333, 1) * tex2D(tex, uv);
    return output;
}
