system PUMediaPack/SpiralStars
{
    category                                    LightFX
    technique 
    {
        visual_particle_quota                   300
        emitted_emitter_quota                   60
        material                                PUMediaPack/Flare_05
        renderer                                Billboard
        {
        }
        emitter                                 Point 
        {
            emission_rate                       1
            angle                               1
            time_to_live                        2
            velocity                            300
            emits                               emitter_particle CircleEmitter
            force_emission                      true
        }
        emitter                                 Circle CircleEmitter
        {
            emission_rate                       100
            time_to_live                        0.5
            direction                           0 0 0
            emits                               emitter_particle PointEmitter
            radius                              200
            step                                0.2
            emit_random                         false
        }
        emitter                                 Point PointEmitter
        {
            emission_rate                       5
            angle                               360
            time_to_live                        1
            velocity                            50
            all_particle_dimensions             dyn_random
            {
                min                             20
                max                             120
            }
            start_colour_range                  0.3 0.3 0.3 1
        }
        use_alias                               PUMediaPack/ColourAffectorFade_04
        use_alias                               PUMediaPack/OnClearDoStopSystem
    }
}

