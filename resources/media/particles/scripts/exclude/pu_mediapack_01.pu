system PUMediaPack/Bubbles
{
    technique 
    {
        visual_particle_quota                   250
        material                                PUMediaPack/Bubble
        renderer                                Billboard
        {
        }
        emitter                                 Line
        {
            emission_rate                       20
            angle                               10
            time_to_live                        10
            velocity                            dyn_random
            {
                min                             100
                max                             600
            }
            all_particle_dimensions             dyn_random
            {
                min                             50
                max                             150
            }
            position                            -800 -600 0
            end                                 1600 -600 0
        }
    }
    technique 
    {
        visual_particle_quota                   220
        material                                PUMediaPack/BlurredBubble
        renderer                                Billboard
        {
        }
        emitter                                 Line
        {
            emission_rate                       20
            angle                               10
            time_to_live                        10
            velocity                            dyn_random
            {
                min                             50
                max                             200
            }
            all_particle_dimensions             dyn_random
            {
                min                             30
                max                             100
            }
            position                            -800 -400 0
            end                                 1600 -400 0
        }
    }
}

