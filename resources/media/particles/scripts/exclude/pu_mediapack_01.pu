system PUMediaPack/Teleport
{
    category                                    LightFX
    technique 
    {
        visual_particle_quota                   50
        material                                PUMediaPack/Streak_01
        renderer                                Billboard
        {
        }
        emitter                                 Circle 
        {
            emission_rate                       dyn_oscillate
            {
                oscillate_frequency             0.5
                oscillate_phase                 0
                oscillate_base                  100
                oscillate_amplitude             100
                oscillate_type                  sine
            }
            time_to_live                        0.2
            particle_width                      dyn_random
            {
                min                             80
                max                             140
            }
            particle_height                     dyn_random
            {
                min                             320
                max                             960
            }
            direction                           0 0 0
            colour                              0.3 0.65 0.76 1
            step                                0.2
        }
        use_alias                               PUMediaPack/ColourAffectorFade_04
        use_alias                               PUMediaPack/OnClearDoStopSystem
    }
    technique 
    {
        visual_particle_quota                   100
        material                                PUMediaPack/Flare_04
        renderer                                Billboard
        {
        }
        emitter                                 Box 
        {
            emission_rate                       dyn_oscillate
            {
                oscillate_frequency             0.5
                oscillate_phase                 0
                oscillate_base                  200
                oscillate_amplitude             200
                oscillate_type                  sine
            }
            time_to_live                        0.2
            all_particle_dimensions             dyn_random
            {
                min                             48
                max                             160
            }
            direction                           0 0 0
            colour                              0.3 0.65 0.76 1
            box_width                           150
            box_height                          600
            box_depth                           150
        }
        use_alias                               PUMediaPack/ColourAffectorFade_03
    }
}

